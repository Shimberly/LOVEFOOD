<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".Registrarse">




    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#C72727"
            app:popupTheme="@style/PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="14"
        android:hint="Usuario"
        android:backgroundTint="#C72727"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textColorLink="#C72727"
        android:layout_weight=".10"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#C72727"
        android:ems="14"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_weight=".10"
        android:textColorLink="#C72727"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#C72727"
        android:ems="14"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textColorLink="#C72727"
        android:layout_weight=".10"
        android:layout_marginHorizontal="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".10"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinSe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight=".30"
            android:backgroundTint="#C72727"
            android:ems="14"
            android:hint="Género"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textColorLink="#C72727" />

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="#C72727"
            android:ems="14"
            android:hint="Fecha de Nacimiento"
            android:inputType="date"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textColorLink="#C72727"
            android:focusable="false"
            android:clickable="true"
            android:layout_weight=".70"
            android:maxLines="1"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#C72727"
        android:text="REGISTRARSE"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_weight=".15"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_weight=".10"
        android:text="ò"
        android:textColor="#000" />

    <Button
        android:id="@+id/btnRegistroFb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/btnborderfb"
        android:text="REGISTRARSE CON FACEBOOK"
        android:textColor="#3B5998"
        android:layout_weight=".15"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"/>
    <Button
        android:id="@+id/btnRegistroGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnborder"
        android:text="REGISTRARSE CON GOOGLE"
        android:textColor="#C72727"
        android:layout_weight=".10"
        android:layout_marginBottom="35dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"/>
</LinearLayout>