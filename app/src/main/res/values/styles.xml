<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:color">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorLink">#000</item>
        <item name="android:textColorHint">#000</item>
    </style>


    <style name="MyDatePickerSpinnerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:calendarViewShown">false</item>
        <item name="colorControlNormal">#C72727</item>
        <item name="colorAccent">#C72727</item>
        <item name="colorControlHighlight">#EDF0F5</item>
        <item name="colorPrimary">#C72727</item>
        <item name="colorSwitchThumbNormal">#C72727</item>

    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">#C72727</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppThemeMyLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#C72727</item>
        <item name="android:colorActivatedHighlight">#C72727</item>
        <item name="android:textColorPrimaryDisableOnly">#f44336</item>
    </style>

</resources>
